<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6sp"
    android:background="@drawable/button_danger"
    android:gravity="center"
    android:padding="8sp"
    app:barrierMargin="6sp"
    app:layout_scrollFlags="snapMargins">

    <ImageView
        android:id="@+id/imageAnnouncementIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_arbitrade_square" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/button_warning"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6sp">

        <TextView
            android:id="@+id/textAnnouncementMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="TextView" />

    </LinearLayout>

</LinearLayout>